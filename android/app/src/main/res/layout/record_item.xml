<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/record_item"
    app:cardElevation="10dp"
    app:cardCornerRadius="20dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:background="#F5F6FA">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/smoking_record_img"
            android:id="@+id/record_img"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"/>
        <RelativeLayout
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/record_text"
            android:id="@+id/record_text_layout"
            android:layout_toRightOf="@id/record_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/number_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="回放编号：001"/>
            <TextView
                android:layout_below="@+id/number_text"
                android:id="@+id/stime_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="开始时间：2023-07-06T09:23:33"/>
            <TextView
                android:layout_below="@id/stime_text"
                android:id="@+id/etime_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="结束时间：2023-07-06T09:23:33"
                android:layout_marginBottom="10dp"/>
        </RelativeLayout>
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/record_text"
            android:text="查询到危险行为！"
            android:textSize="18dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/record_in_img"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/record_in_img4"
            android:scaleType="fitCenter"
            android:layout_width="80dp"
            android:layout_height="80dp"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>